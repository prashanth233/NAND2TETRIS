/**
 * A 16-bit counter with load and reset control bits.
 * if      (reset[t] == 1) out[t+1] = 0
 * else if (load[t] == 1)  out[t+1] = in[t]
 * else if (inc[t] == 1)   out[t+1] = out[t] + 1  (integer addition)
 * else                    out[t+1] = out[t]
 */

CHIP PC {
    IN in[16],load,inc,reset;
    OUT out[16];

    PARTS:
    // Put your code here:
	Or(a=reset,b=inc,out=x1);
	Or(a=x1,b=load,out=x2);
	Register(in=muxout,load=x2,out=out,out=y);
	Inc16(in=y,out=incout);
	Mux16(a=incout,b=in,sel=load,out=x3);
	Mux16(a=x3,b=false,sel=reset,out=muxout);
}
